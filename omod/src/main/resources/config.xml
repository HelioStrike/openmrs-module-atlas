<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>atlas</id>
	<name>Atlas Module</name>
	<version>1.0</version>
	<package>org.openmrs.module.@MODULE_ID@</package>
	<author>Victor Chircu</author>
	<description>
			Atlas Module.
	</description>

	<activator>@MODULE_PACKAGE@.AtlasModuleActivator</activator>
	
	<!-- <updateURL>https://dev.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
	<require_version>1.6.0</require_version>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>@MODULE_PACKAGE@.extension.html.AdminList</class>
	</extension>
	
	
	<!-- AOP
	<advice>
		<point>org.openmrs.api.FormService</point>
		<class>@MODULE_PACKAGE@.advice.DuplicateFormAdvisor</class>
	</advice>
	 /AOP -->
	
	
	<privilege>
		<name>Manage Atlas Data</name>
		<description>Allows user to set/update/delete atlas data</description>
	</privilege>


	
	<globalProperty>
		<property>@MODULE_ID@.numberOfPatients</property>
		<defaultValue>?</defaultValue>
		<description>
		    TEMPORARY -	Shows ? instead of the actual number of Patients, until it gets updated
		</description>
	</globalProperty>
	<globalProperty>
		<property>@MODULE_ID@.numberOfObservations</property>
		<defaultValue>?</defaultValue>
		<description>
		    TEMPORARY -	Shows ? instead of the actual number of Observations, until it gets updated
		</description>
	</globalProperty>
	<globalProperty>
		<property>@MODULE_ID@.numberOfEncounters</property>
		<defaultValue>?</defaultValue>
		<description>
		    TEMPORARY -	Shows ? instead of the actual number of Encounters, until it gets updated
		</description>
	</globalProperty>
	
	
	
	<dwr>
		<allow>
			<create creator="new" javascript="DWRAtlasService">
				<param name="class" value="org.openmrs.module.@MODULE_ID@.web.dwr.DWRAtlasService"/>
				<include method="saveAtlasBubbleData"/>
				<include method="enableAtlasModule"/>
				<include method="disableAtlasModule"/>
				<include method="setIncludeModules"/>
				<include method="setPosition"/>
				<include method="updateAndGetStatistics"/>
				<include method="setZoom"/>
				<include method="getJsonData"/>
				<include method="setUsageDisclaimer"/>
			</create>
		</allow>

		<signatures>
			<![CDATA[
			import @MODULE_PACKAGE@.web.dwr.DWRAtlasService;
			DWRAtlasService.saveAtlasBubbleData(String latStr,	String lngStr,
			String name, String implementationTypeStr, String website, String imageURL, 
			String notes, String contactName, String contactEmail,
			String includeNumberOfPatientsStr, String includeNumberOfObservationsStr, String includeNumberOfEncountersStr);
			
			DWRAtlasService.enableAtlasModule();
			
			DWRAtlasService.disableAtlasModule(String disclaimerAcceptedStr);
			
			DWRAtlasService.setIncludeModules(String includeModulesStr);
			
			DWRAtlasService.setPosition(String latStr, String lngStr);
			
			DWRAtlasService.updateAndGetStatistics();
			
			DWRAtlasService.setZoom(String zoomStr);
			
			DWRAtlasService.setUsageDisclaimer(String acceptedStr)
			
			DWRAtlasService.getJsonData();
			]]>
		</signatures>	
	</dwr>
	
	
	<!-- Servlets -->
	<!-- Accessed through the url /pageContext()/moduleServlet/<moduleId>/<servlet-name> 
	<servlet>
		<servlet-name>formDownload</servlet-name>
		<servlet-class>@MODULE_PACKAGE@.web.FormDownloadServlet</servlet-class>
	</servlet>
	-->
	<!-- /Servlets -->
	
	
	<!-- Internationalization -->
	<!-- All message codes should start with @MODULE_ID@.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->
	

</module>

